{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug smallchat-server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/smallchat-server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build smallchat-server",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // 根据你的系统路径调整
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            }
